        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlexShareApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="SplashScreen" Height="225" Width="400"
        >
    <Grid Background="DarkSlateGray">
        <Grid>
            <TextBlock x:Name="MainBox" Foreground="Wheat" FontSize="50"
                       VerticalAlignment="Center" FontFamily="Cascadia Mono" HorizontalAlignment="Center">

            </TextBlock>
        </Grid>
    </Grid>
</Window>
